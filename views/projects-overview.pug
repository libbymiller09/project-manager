extends layout

block layout-content
  include navbar

  div.container
    if projects
        div
        each project in projects
          div.project
            a(href='/project/details/' + project._id)= project.title
            p= project.description
            p= project.date
            p= project.owner
            a(href='/project/update-form/' + project._id).btn.btn-warning Edit
            a(href='/project/remove/' + project._id).btn.btn-danger#deleteBtn Delete
    else
      p No projects yet :(
